<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Bilibili_Client"
      xmlns:System="clr-namespace:System;assembly=mscorlib"
      x:Class="Bilibili_Client.index"
      mc:Ignorable="d"
      d:DesignHeight="837"
      d:DesignWidth="989"
      Background="White"
      Title="index">
    <Page.Resources>
        <Style TargetType="{x:Type ListBoxItem}">
            <Setter Property="FocusVisualStyle"
                    Value="{x:Null}" />
        </Style>
        <DataTemplate x:Key="double_row">

        </DataTemplate>
    </Page.Resources>
    <Grid>
        <ListBox  x:Name="content_box"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  BorderThickness="0"
                  BorderBrush="#FFC9CCD4">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="2"
                                 Rows="6" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <!--整个外边框-->
            <Border Width="475"
                    BorderBrush="#FF7DB6F0"
                    BorderThickness="1"
                    CornerRadius="15">
                <!--框内组-->
                <Grid Width="440">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <!--左边头像列-->
                    <Grid Grid.Column="0">
                        <Image Source="resource/img/头像.png"
                               Width="48"
                               Height="48"
                               Margin="-7,21,9,367">
                            <Image.Clip>
                                <RectangleGeometry RadiusX="100"
                                                   RadiusY="100"
                                                   Rect="0,0,48,48" />
                            </Image.Clip>
                        </Image>
                    </Grid>
                    <!--右边组-->
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="36"></RowDefinition>
                            <RowDefinition Height="38"></RowDefinition>
                            <RowDefinition Height="302"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <!--up名字-->
                        <Grid Grid.Row="0">
                            <TextBlock x:Name="video_up"
                                       Block.TextAlignment="Left"
                                       FontFamily="Helvetica Neue"
                                       FontWeight="Bold"
                                       Text="Jonyan Dunh"
                                       FontSize="16"
                                       Margin="0,16,0,0" />
                        </Grid>
                        <!--视频简介-->
                        <Grid Grid.Row="1">
                            <TextBlock x:Name="video_introduction"
                                       TextWrapping="WrapWithOverflow"
                                       FontSize="16"
                                       Text="好想离开这个世界啊&#13;每天每夜都在想着你,你什么时候回来?......"
                                       FontFamily="Helvetica Neue" />
                        </Grid>
                        <!--（视频封面|视频）&标题信息栏-->
                        <Grid Grid.Row="2">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="243"></RowDefinition>
                                    <RowDefinition Height="*"></RowDefinition>
                                </Grid.RowDefinitions>
                                <!--（视频封面|视频）-->
                                <Grid Grid.Row="0">
                                    <Border BorderBrush="#FFD1D1D1"
                                            BorderThickness="1,1,1,0"
                                            CornerRadius="15,15,0,0">
                                        <Image Source="resource/img/cover.jpg"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center">
                                            <Image.Clip>
                                                <RectangleGeometry RadiusX="15"
                                                                   RadiusY="15"
                                                                   Rect="0,0,390,243" />
                                            </Image.Clip>
                                        </Image>
                                    </Border>
                                </Grid>
                                <GridSplitter HorizontalAlignment="Stretch"
                                              VerticalAlignment="Top"
                                              Grid.Row="1"
                                              Background="#FFD1D1D1"
                                              Height="1" />
                                <!--标题&信息栏-->
                                <Grid Grid.Row="1">
                                    <Border BorderBrush="#FFD1D1D1"
                                            BorderThickness="1,0,1, 1"
                                            CornerRadius="0,0,15,15">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="30"></RowDefinition>
                                                <RowDefinition Height="*"></RowDefinition>
                                            </Grid.RowDefinitions>
                                            <!--标题栏-->
                                            <Grid Grid.Row="0">
                                                <Label x:Name="video_title"
                                                       HorizontalContentAlignment="Left"
                                                       VerticalContentAlignment="Bottom"
                                                       FontSize="14"
                                                       Content="当程序员遇上网抑云"
                                                       Height="30"
                                                       VerticalAlignment="Top"
                                                       FontFamily="Helvetica Neue"
                                                       FontWeight="Bold" />
                                            </Grid>
                                            <!--信息栏-->
                                            <Grid Grid.Row="1">
                                                <Label x:Name="video_bvid"
                                                       HorizontalContentAlignment="Left"
                                                       VerticalContentAlignment="Top"
                                                       FontSize="12"
                                                       Foreground="Gray"
                                                       FontFamily="Microsoft YaHei"
                                                       Content="BV17x411w7KC"
                                                       Height="27"
                                                       VerticalAlignment="Top" />
                                            </Grid>

                                        </Grid>
                                    </Border>

                                </Grid>
                            </Grid>
                        </Grid>
                        <!--四连-->
                        <Grid Grid.Row="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <!--播放量数模块-->
                            <Grid Grid.Column="0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <!--播放量LOGO-->
                                    <Grid Grid.Column="0">
                                        <Button Height="60"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                VerticalAlignment="Top">
                                            <Image Source="resource/img/播放量.png"
                                                   Height="24"
                                                   RenderTransformOrigin="0.4,0.589" />
                                        </Button>
                                    </Grid>
                                    <!--播放量数-->
                                    <Grid Grid.Column="1">
                                        <TextBlock x:Name="video_Play_volume"
                                               FontSize="14"
                                               FontFamily="Helvetica Neue"
                                                   Margin="0,6,0,0"
                                               Text="20"
                                                   Height="30
                                                   "
                                                   VerticalAlignment="Top"
                                               FontWeight="Bold">
                                        </TextBlock>
                                    </Grid>
                                </Grid>
                            </Grid>
                            <!--点赞数模块-->
                            <Grid Grid.Column="1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <!--点赞LOGO-->
                                    <Grid Grid.Column="0">
                                        <Button Height="60"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                VerticalAlignment="Top">
                                            <Image Source="resource/img/点赞数.png"
                                                   
                                                   Height="20"
                                                   RenderTransformOrigin="0.4,0.589" />
                                        </Button>
                                    </Grid>
                                    <!--点赞数-->
                                    <Grid Grid.Column="1">
                                        <TextBlock x:Name="video_like"
                                                   FontFamily="Helvetica Neue"
                                                   Margin="0,6,0,0"
                                                   FontSize="14"
                                               Text="20"
                                               Height="30"
                                               VerticalAlignment="Top"
                                               FontWeight="Bold">
                                        </TextBlock>
                                    </Grid>
                                </Grid>
                            </Grid>
                            <!--硬币数模块-->
                            <Grid Grid.Column="2">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <!--硬币LOGO-->
                                    <Grid Grid.Column="0">
                                        <Button Height="60"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                VerticalAlignment="Top">
                                            <Image Source="resource/img/硬币数.png"                                                   Height="20"
                                                   RenderTransformOrigin="0.4,0.589" />
                                        </Button>
                                    </Grid>
                                    <!--硬币数-->
                                    <Grid Grid.Column="1">
                                        <TextBlock x:Name="video_coins"
                                               
                                               FontSize="14"
                                               FontFamily="Helvetica Neue"
                                               Margin="0,6,0,0"
                                               Text="20"
                                               Height="30"
                                               VerticalAlignment="Top"
                                               FontWeight="Bold">
                                        </TextBlock>
                                    </Grid>
                                </Grid>
                            </Grid>
                            <!--收藏数模块-->
                            <Grid Grid.Column="3">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <!--收藏LOGO-->
                                    <Grid Grid.Column="0">
                                        <Button Height="60"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                VerticalAlignment="Top">
                                            <Image Source="resource/img/收藏数.png"                                                   Height="20"
                                                   RenderTransformOrigin="0.4,0.589" />
                                        </Button>
                                    </Grid>
                                    <!--收藏数-->
                                    <Grid Grid.Column="1">
                                        <TextBlock x:Name="video_favorites"
                                                   FontFamily="Helvetica Neue"
                                                   Margin="0,6,0,0"
                                                   FontSize="14"
                                               
                                               Text="20"
                                               Height="30"
                                               VerticalAlignment="Top"
                                               FontWeight="Bold">
                                        </TextBlock>
                                    </Grid>
                                </Grid>
                            </Grid>
                            <!--转发数模块-->
                            <Grid Grid.Column="4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <!--转发LOGO-->
                                    <Grid Grid.Column="0">
                                        <Button Height="60"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                VerticalAlignment="Top">
                                            <Image Source="resource/img/转发数.png"                                                   Height="20"
                                                   RenderTransformOrigin="0.4,0.589" />
                                        </Button>
                                    </Grid>
                                    <!--转发数-->
                                    <Grid Grid.Column="1">
                                        <TextBlock x:Name="video_shares"
                                              
                                               FontSize="14"
                                                   FontFamily="Helvetica Neue"
                                                   Margin="0,6,0,0"
                                                   Text="20"
                                               Height="30"
                                               VerticalAlignment="Top"
                                               FontWeight="Bold">
                                        </TextBlock>
                                    </Grid>
                                </Grid>
                            </Grid>

                        </Grid>
                    </Grid>
                </Grid>
            </Border>
        </ListBox>
    </Grid>
</Page>
