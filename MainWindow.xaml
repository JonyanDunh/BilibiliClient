<Window x:Class="Bilibili_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="http://schemas.microsoft.com/netfx/2009/xaml/presentation"
        mc:Ignorable="d"
        x:Name="mainwindow"
        Background="White"
        Title="PILIPILI客户端"
        Height="900"
        Width="1608" MinWidth="1011.1">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Dictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="233.4" />
            <ColumnDefinition Width="988.8*" MinWidth="400" />
            <ColumnDefinition Width="377.7"   />
        </Grid.ColumnDefinitions>

        <!--左边组-->
        <Grid x:Name="left_grid"
              Grid.Column="0"
              Margin="0">
            <!--PILIPILI_Logo-->
            <Image Source="resource/img/PILIPILI_LOGO.png"
                   Margin="47,10,47,0"
                   RenderTransformOrigin="0.5,0.5"
                   x:Name="logo"
                   VerticalAlignment="Top" />
            <ItemsControl ItemTemplate="{StaticResource Mainwindow_left_button}" 
                          x:Name="left_button_box"
                          Margin="0,95,0,70"
                          HorizontalAlignment="Center">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="1"
                                     Rows="10" />

                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>

            <Grid Height="60"
                  Background="#FFF4E3F7"
                  VerticalAlignment="Bottom">
                <Image Source="resource/img/头像.png"
                       Width="48"
                       Height="48"
                       HorizontalAlignment="Left"
                       Margin="20,0,0,0">
                    <Image.Clip>
                        <RectangleGeometry RadiusX="48"
                                           RadiusY="48"
                                           Rect="0,0,48,48" />
                    </Image.Clip>
                </Image>
                <TextBlock FontFamily="Microsoft YaHei"
                           FontWeight="Bold"
                           FontSize="20"
                           Foreground="White"
                           Text="JonyanDunh"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"
                           Margin="0,0,20,0" />
            </Grid>
        </Grid>
        <!--中间-->
        <Grid x:Name="middle_grid"
              Grid.Column="1"
              Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="53"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <!--标题栏-->
            <Grid Grid.Row="0">
                <!--标题-->
            <Label x:Name="middle_title"
                   HorizontalContentAlignment="Center"
                   VerticalContentAlignment="Center"
                   FontSize="21"
                   FontFamily="Microsoft YaHei"
                   FontWeight="Bold"
                   Content="首页"
                   Margin="0,0,900,0" />
                <Button Foreground="White"
                        FontSize="20"
                        FontFamily="Microsoft YaHei"
                        FontWeight="Bold"
                        Grid.Row="10"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Height="40"
                        Width="40"
                        Margin="0,0,30,0"
                        Click="index_button"
                        x:Name="Refresh_button">

                    <WrapPanel>
                        <Image Source="resource/img/刷新.png"
                               Width="24"
                               Height="24">
                        </Image>
                    </WrapPanel>
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border BorderBrush="{TemplateBinding Control.BorderBrush}"
                                    BorderThickness="0"
                                    CornerRadius="50"
                                    Name="PART_Background">
                                <Border.Background>
                                    <LinearGradientBrush EndPoint="0,1"
                                                         StartPoint="0,0">
                                        <GradientStop Color="#FED4E0"
                                                      Offset="0.0" />
                                        <GradientStop Color="#FFFBE1E9"
                                                      Offset="0.5" />
                                        <GradientStop Color="#FFFBE1E9"
                                                      Offset="0.0" />
                                    </LinearGradientBrush>
                                </Border.Background>
                                <ContentPresenter  Content="{TemplateBinding ContentControl.Content}"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
            <!--中间页面-->
            <Grid Grid.Row="1">
            <Frame x:Name="middle_frame"
                   Grid.Row="1"
></Frame>
                </Grid>
        </Grid>
        <!--右边组-->
        <Grid x:Name="right_grid"
              Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="53"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <!--搜索栏-->
            <Grid Grid.Row="0"
                  x:Name="search_bar">
                <Grid Margin="10,10,15,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Border BorderBrush="#FED4E0"
                        BorderThickness="1,1,0,1"
                        CornerRadius="5,0,0,5">
                    <Image Source="resource/img/搜索.png"
                           Width="30"
                           Height="30">
                        <Image.Clip>
                            <RectangleGeometry RadiusX="30"
                                               RadiusY="30"
                                               Rect="0,0,30,30" />
                        </Image.Clip>
                    </Image>
                </Border>
                <Border Grid.Column="1"
                        x:Name="Bd"
                        BorderBrush="#FED4E0"
                        BorderThickness="0,1,1,1"
                        Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
                        SnapsToDevicePixels="true"
                        CornerRadius="0,5,5,0">
                    <TextBox BorderBrush="{x:Null}"
                             BorderThickness="0"
                             x:Name="search_textbox"
                             FontSize="16"
                             VerticalContentAlignment="Center"
                             FontFamily="Microsoft YaHei Light"
                             Grid.Row="0"
                                 Margin="0,0,-1,0">
                        <TextBox.Resources>
                            <VisualBrush x:Key="HelpBrush"
                                         TileMode="None"
                                         Opacity="0.3"
                                         Stretch="None"
                                         AlignmentX="Left">
                                <VisualBrush.Visual>
                                    <TextBlock  FontStyle="Italic"
                                                Text="你感兴趣的视频都在P站" />
                                </VisualBrush.Visual>
                            </VisualBrush>
                        </TextBox.Resources>
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Style.Triggers>
                                    <Trigger Property="Text"
                                             Value="{x:Null}">
                                        <Setter Property="Background"
                                                Value="{StaticResource HelpBrush}" />
                                    </Trigger>
                                    <Trigger Property="Text"
                                             Value="">
                                        <Setter Property="Background"
                                                Value="{StaticResource HelpBrush}" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                </Border>
                </Grid>
            </Grid>
            <!--右边页面-->
            <!--<Frame x:Name="right_frame"
                   Source="index.xaml"
                   Grid.Row="1" />-->
        </Grid>
    </Grid>
</Window>
