<Page x:Class="Bilibili_Client.video"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Bilibili_Client"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="video">

    <Grid>
        <!--五连-->
        <Grid Grid.Row="3">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <!--播放量数模块-->
                <!--点赞数模块-->
                <Grid Grid.Column="0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <!--点赞LOGO-->
                        <Grid Grid.Column="0">
                            <Button Height="39"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    VerticalAlignment="Top"
                                    Margin="10,0,0,0">
                                <Image Source="resource/img/点赞数.png"
                                       Height="20"
                                       RenderTransformOrigin="0.4,0.589" />
                            </Button>
                        </Grid>
                        <!--点赞数-->
                        <Grid Grid.Column="1">
                            <TextBlock x:FieldModifier="public" x:Name="video_like"
                                       FontFamily="Helvetica Neue"
                                       Margin="0,6,0,0"
                                       FontSize="14"
                                       Text="{Binding video_likes}"
                                       Height="30"
                                       VerticalAlignment="Top"
                                       FontWeight="Bold">
                            </TextBlock>
                        </Grid>
                    </Grid>
                </Grid>
                <!--硬币数模块-->
                <Grid Grid.Column="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <!--硬币LOGO-->
                        <Grid Grid.Column="0">
                            <Button Height="39"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    VerticalAlignment="Top"
                                    Margin="10,0,0,0">
                                <Image Source="resource/img/硬币数.png"
                                       Height="20"
                                       RenderTransformOrigin="0.4,0.589" />
                            </Button>
                        </Grid>
                        <!--硬币数-->
                        <Grid Grid.Column="1">
                            <TextBlock x:Name="video_coins"
                                       FontSize="14"
                                       FontFamily="Helvetica Neue"
                                       Margin="0,6,0,0"
                                       Text="{Binding video_coins}"
                                       Height="30"
                                       VerticalAlignment="Top"
                                       FontWeight="Bold">
                            </TextBlock>
                        </Grid>
                    </Grid>
                </Grid>
                <!--收藏数模块-->
                <Grid Grid.Column="2">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <!--收藏LOGO-->
                        <Grid Grid.Column="0">
                            <Button Height="39"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    VerticalAlignment="Top"
                                    Margin="10,0,0,0">
                                <Image Source="resource/img/收藏数.png"
                                       Height="20"
                                       RenderTransformOrigin="0.4,0.589" />
                            </Button>
                        </Grid>
                        <!--收藏数-->
                        <Grid Grid.Column="1">
                            <TextBlock x:Name="video_favorites"
                                       FontFamily="Helvetica Neue"
                                       Margin="0,6,0,0"
                                       FontSize="14"
                                       Text="{Binding video_favorites}"
                                       Height="30"
                                       VerticalAlignment="Top"
                                       FontWeight="Bold">
                            </TextBlock>
                        </Grid>
                    </Grid>
                </Grid>
                <!--转发数模块-->
                <Grid Grid.Column="3">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <!--转发LOGO-->
                        <Grid Grid.Column="0">
                            <Button Height="39"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    VerticalAlignment="Top"
                                    Margin="10,0,0,0">
                                <Image Source="resource/img/转发数.png"
                                       Height="20"
                                       RenderTransformOrigin="0.4,0.589" />
                            </Button>
                        </Grid>
                        <!--转发数-->
                        <Grid Grid.Column="1">
                            <TextBlock x:Name="video_shares"
                                       FontSize="14"
                                       FontFamily="Helvetica Neue"
                                       Margin="0,6,0,0"
                                       Text="{Binding video_shares}"
                                       Height="30"
                                       VerticalAlignment="Top"
                                       FontWeight="Bold">
                            </TextBlock>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Page>
